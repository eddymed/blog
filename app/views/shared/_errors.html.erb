
  <% if @article.errors.any? %>
    <div class="alert alert-warning" role="alert">
    
      <h4><%= pluralize(@article.errors.count, "error") %> - Articulo no puede ser guardado:</h4>

      <ul>
        <% @article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>